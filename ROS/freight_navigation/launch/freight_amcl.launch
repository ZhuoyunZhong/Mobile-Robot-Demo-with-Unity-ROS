<launch>
  <arg name="robot_name" default="gopher"/>
  <arg name="prefix" default="$(arg robot_name)/"/>
  <arg name="odom_frame" default="$(arg prefix)odom"/>
  <arg name="scan" default="base_scan"/>
  <arg name="base_frame" default="$(arg prefix)base_link"/>
  <arg name="cmd_vel" default="base_controller/cmd_vel"/>
  <arg name="laser_frame" default="$(arg prefix)laser_link"/>

  <!-- AMCL Node -->
  <node name="amcl" pkg="amcl" type="amcl" output="screen">
    <!-- Change param under namespace -->
    <param name="use_map_topic" value="true"/>
    <remap from="map" to="/map"/>
    <remap from="scan" to="$(arg scan)"/>
    
    <!-- Filter -->
    <param name="min_particles" value="20"/>
    <param name="max_particles" value="200"/>
    <param name="update_min_a" value="0.1"/>
    <param name="update_min_d" value="0.25"/>
    <!-- Laser -->
    <!-- Odometry -->
    <param name="odom_frame_id" value="$(arg odom_frame)"/>
    <param name="odom_model_type" value="diff-corrected"/>
    <param name="base_frame_id" value="$(arg base_frame)"/>
    <param name="global_frame_id" value="/map"/>
  </node>

  <!-- Move Base -->
  <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
    <remap from="cmd_vel" to="$(arg cmd_vel)"/>
    <remap from="map" to="/map"/>
    
    <rosparam file="$(find freight_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" 
     subst_value="true"/>
    <rosparam file="$(find freight_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" 
     subst_value="true"/>
    <rosparam file="$(find freight_navigation)/config/local_costmap_params.yaml" command="load" subst_value="true"/>
    <rosparam file="$(find freight_navigation)/config/global_costmap_params.yaml" command="load" subst_value="true"/>
    <rosparam file="$(find freight_navigation)/config/base_local_planner_params.yaml" command="load"/>

  </node>

</launch>
